<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- The white, rounded rectangle shape -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <corners android:radius="12dp"/>
                    <stroke android:width="1dp" android:color="?attr/colorOutline"/>
                </shape>
            </item>
            <!-- The dropdown arrow icon on the right -->
            <item android:gravity="end|center_vertical" android:end="16dp">
                <bitmap android:src="@drawable/ic_arrow_drop_down_black"
                    android:tint="?attr/colorOnSurfaceVariant"/>
            </item>
        </layer-list>
    </item>
</selector>